<div class="container">
	<div class="row">
		<div class="col-xs-12">		
			<%= form_tag({controller: "realtime", action: "historica"}, method: "get", remote: true, :class => 'form-group') do %>
				<div class="col-xs-6">	
			  		Fecha inicial: <%= text_field :date, "ti", :class => 'form-control', :id => 'datetimepicker1' %>
			  	</div>
			  	<div class="col-xs-6">	
			  		Fecha final: <%= text_field :date, "tf", :class => 'form-control', :id => 'datetimepicker2' %>
			  	</div>			  	
			  	<div class="col-xs-6">	
			  		<br>
			  		<%= submit_tag("Buscar", :class => 'btn btn-primary') %>
			  		<br><br><br>
			  	</div>				
			<% end %>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<div id="resultado" />
		</div>
	</div>
</div>

<script type="text/javascript">
	// Lo siguiente es para enlazar los dos pickers, de modo que no se pueda escoger una fecha anterior a la primera...
	$(function () {
        $('#datetimepicker1').datetimepicker();
        $('#datetimepicker2').datetimepicker({
            useCurrent: false
        });
        $("#datetimepicker1").on("dp.change", function (e) {
            $('#datetimepicker2').data("DateTimePicker").minDate(e.date);
        });
        $("#datetimepicker2").on("dp.change", function (e) {
            $('#datetimepicker1').data("DateTimePicker").maxDate(e.date);
        });
    });
</script>