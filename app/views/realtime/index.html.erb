<%= javascript_include_tag "updater", 'data-turbolinks-track' => true %>
<div class="col-lg-3 hidden-xs hidden-md hidden-sm">
    <div class="list-group">
        <a href="/realtime/index" class="list-group-item active">Tiempo real</a>
        <a href="/realtime/historics" class="list-group-item list-group-item-action">Históricos</a>
        <a href="/configuraciones/index" class="list-group-item list-group-item-action">Configuración</a>
    </div>
    <%# image_tag("103.png", class: "col-xs-12") %>  
</div>
<div class="col-lg-9">
	<div class="container-fluid">
		<div class="row">
			<div class="page-header">
			  <h1>Consumo de potencia <small>en tiempo real</small></h1>
			</div>
			<div class="col-xs-12">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Valor</th>
							<th>Fecha</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>
								<div id="valor">
									<% if @lastpower == nil %>
										<h1>No hay datos disponibles</h1>
									<% else %>
										<p>Loading...</p>
									<% end %> 
								</div>
							</td>
							<td>
								<div id="fecha">
									<% if @lastpower == nil %> 
									
									<% else %>
										<p>Loading...</p>
									<% end %> 
								</div>
							</td>
						</tr>
					</tbody>
				</table>	
			</div>		
			<div class="col-xs-12">
			<br><br>
				<% if @lastpower == nil %>
				<% else %>
					<div id="grafica" class="row">
						<%= render "/realtime/realtime" %>						
					</div>					
				<%end%> 
			</div>
			<div class="col-sm-6">
				<br><br>
				<div class="panel panel-primary">
				  <div class="panel-heading">
				    <h3 class="panel-title">Consumo kWh</h3>
				  </div>
				  <div class="panel-body" id="promedio">
				    Cargando...
				  </div>
				</div>
			</div>		
			<div class="col-sm-6">
				<br><br>
				<div class="panel panel-info">
				  <div class="panel-heading">
				    <h3 class="panel-title">Valor en $</h3>
				  </div>
				  <div class="panel-body" id="costo1">
				    Cargando...
				  </div>
				</div>
			</div>			
		</div>
	</div>
</div>

